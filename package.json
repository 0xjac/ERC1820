{
  "name": "erc1820",
  "version": "0.0.1",
  "description": "ERC1820 - Pseudo-introspection using a registry contract",
  "main": "index.js",
  "files": [
    "artifacts",
    "js",
    "contracts"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint:sol": "solium --reporter pretty --dir contracts",
    "build:sol": "solc --overwrite --optimize --optimize-runs 200 --metadata-literal --output-dir ./artifacts/solc-out --abi --asm --bin --devdoc --hashes --metadata --opcodes --userdoc ./contracts/*.sol",
    "build:contract-wrappers": "web3x-codegen contracts.json && tsc",
    "build": "npm run clean && npm run build:sol && npm run build:contract-wrappers",
    "test": "mocha --harmony",
    "clean": "rm -rf artifacts",
    "info": "node js/info.js",
    "prepack": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/0xjac/ERC1820.git"
  },
  "keywords": [
    "solidity",
    "pseudo-introspaection",
    "ERC672",
    "ERC820",
    "ERC820a",
    "ERC1820",
    "ERC777",
    "smart",
    "contract",
    "reverseENS",
    "ethereum"
  ],
  "author": "Jordi Baylina, Jacques Dafflon",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/0xjac/ERC1820/issues"
  },
  "homepage": "https://eips.ethereum.org/EIPS/eip-820",
  "dependencies": {
    "ethereumjs-tx": "1.3.7",
    "ethereumjs-util": "6.1.0",
    "typescript": "^3.3.3333",
    "web3x": "3.0.4"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "ethlint": "^1.2.3",
    "ganache-cli": "6.3.0",
    "mocha": "^5.2.0"
  }
}
